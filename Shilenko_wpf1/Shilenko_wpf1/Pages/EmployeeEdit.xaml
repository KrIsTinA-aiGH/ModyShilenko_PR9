<Page x:Class="Shilenko_wpf1.Pages.EmployeeEdit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Shilenko_wpf1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="600"
      Title="Добавление/редактирование сотрудника">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Заголовок -->
            <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                       x:Name="tbTitle" Text="Добавление сотрудника" 
                       FontSize="20" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Фамилия -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Фамилия:" 
                       VerticalAlignment="Center" Margin="0,5"/>
            <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtLastName" 
                     Margin="5" MinWidth="200"/>

            <!-- Имя -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Имя:" 
                       VerticalAlignment="Center" Margin="0,5"/>
            <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtFirstName" 
                     Margin="5" MinWidth="200"/>

            <!-- Должность -->
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Должность:" 
                       VerticalAlignment="Center" Margin="0,5"/>
            <ComboBox Grid.Row="3" Grid.Column="1" x:Name="cmbPosition" 
                      Margin="5" MinWidth="200"/>

            <!-- Дата приёма -->
            <TextBlock Grid.Row="4" Grid.Column="0" Text="Дата приёма:" 
                       VerticalAlignment="Center" Margin="0,5"/>
            <DatePicker Grid.Row="4" Grid.Column="1" x:Name="dpHireDate" 
                        Margin="5" SelectedDateFormat="Short"/>

            <!-- Телефон -->
            <TextBlock Grid.Row="5" Grid.Column="0" Text="Телефон:" 
                       VerticalAlignment="Center" Margin="0,5"/>
            <TextBox Grid.Row="5" Grid.Column="1" x:Name="txtPhone" 
                     Margin="5" MinWidth="200"/>

            <!-- Email -->
            <TextBlock Grid.Row="6" Grid.Column="0" Text="Email:" 
                       VerticalAlignment="Center" Margin="0,5"/>
            <TextBox Grid.Row="6" Grid.Column="1" x:Name="txtEmail" 
                     Margin="5" MinWidth="200"/>

            <!-- Изображение -->
            <TextBlock Grid.Row="7" Grid.Column="0" Text="Фотография:" 
                       VerticalAlignment="Top" Margin="0,5"/>
            <StackPanel Grid.Row="7" Grid.Column="1" Margin="5">
                <Image x:Name="imgPhoto" Width="150" Height="150" 
                       Source="/Resources/picture.png" Stretch="Uniform"/>
                <Button x:Name="btnSelectImage" Content="Выбрать изображение" 
                        Margin="0,5,0,0" Padding="5,2" Click="btnSelectImage_Click"/>
            </StackPanel>

            <!-- Путь к изображению -->
            <TextBlock Grid.Row="8" Grid.Column="0" Text="Путь к изображению:" 
                       VerticalAlignment="Center" Margin="0,5"/>
            <TextBox Grid.Row="8" Grid.Column="1" x:Name="txtImagePath" 
                     Margin="5" MinWidth="200" IsReadOnly="True"/>

            <!-- Кнопки -->
            <StackPanel Grid.Row="11" Grid.ColumnSpan="2" 
                        Orientation="Horizontal" HorizontalAlignment="Center" 
                        Margin="0,20,0,0">
                <Button x:Name="btnSave" Content="Сохранить" 
                        Width="120" Height="30" Margin="10" Click="btnSave_Click"/>
                <Button x:Name="btnDelete" Content="Удалить" 
                        Width="120" Height="30" Margin="10" Click="btnDelete_Click"/>
                <Button x:Name="btnCancel" Content="Отмена" 
                        Width="120" Height="30" Margin="10" Click="btnCancel_Click"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>