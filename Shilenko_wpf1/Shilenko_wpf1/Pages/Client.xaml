<Page x:Class="Shilenko_wpf1.Pages.Client"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Shilenko_wpf1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Client">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель приветствия -->
        <Border Grid.Row="0" Background="#FFE8F5E8" Padding="15,10" Margin="10">
            <StackPanel>
                <TextBlock x:Name="tbGreeting" FontSize="16" FontWeight="Bold" Foreground="#FF2E7D32"/>
                <TextBlock x:Name="tbUserName" FontSize="14" FontWeight="SemiBold" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Основное содержимое страницы -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Добро пожаловать в систему!" FontSize="18" HorizontalAlignment="Center"/>
            <TextBlock x:Name="tbUserInfo" FontSize="14" HorizontalAlignment="Center" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>