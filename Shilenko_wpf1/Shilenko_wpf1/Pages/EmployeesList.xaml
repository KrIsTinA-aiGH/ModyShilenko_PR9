<Page x:Class="Shilenko_wpf1.Pages.EmployeesList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Shilenko_wpf1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="Список сотрудников">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Список сотрудников" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="10"/>

        <!-- Панель поиска и фильтрации -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Поиск по ФИО:" VerticalAlignment="Center" Margin="5,0"/>
            <TextBox x:Name="txtSearch" Width="200" Margin="5,0" 
                     TextChanged="txtSearch_TextChanged"/>
            <TextBlock Text="Фильтр по должности:" VerticalAlignment="Center" Margin="20,0,5,0"/>
            <ComboBox x:Name="cmbPositionFilter" Width="200" Margin="5,0"
                      SelectionChanged="cmbPositionFilter_SelectionChanged"/>
            <Button x:Name="btnAddEmployee" Content="Добавить сотрудника" 
                    Margin="20,0,5,0" Padding="10,5" Click="btnAddEmployee_Click"/>
        </StackPanel>

        <!-- Список сотрудников -->
        <ListView x:Name="lvEmployees" Grid.Row="2" Margin="10"
                  MouseDoubleClick="lvEmployees_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" Width="50" 
                                    DisplayMemberBinding="{Binding EmployeeID}"/>
                    <GridViewColumn Header="Фамилия" Width="120" 
                                    DisplayMemberBinding="{Binding LastName}"/>
                    <GridViewColumn Header="Имя" Width="120" 
                                    DisplayMemberBinding="{Binding FirstName}"/>
                    <GridViewColumn Header="Должность" Width="150" 
                                    DisplayMemberBinding="{Binding EmployeePositions.PositionName}"/>
                    <GridViewColumn Header="Дата приёма" Width="100" 
                                    DisplayMemberBinding="{Binding HireDate, StringFormat=\{0:dd.MM.yyyy\}}"/>
                    <GridViewColumn Header="Телефон" Width="120" 
                                    DisplayMemberBinding="{Binding Phone}"/>
                    <GridViewColumn Header="Email" Width="200" 
                                    DisplayMemberBinding="{Binding Email}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Статусная строка -->
        <TextBlock Grid.Row="3" x:Name="tbStatus" Margin="10"/>
    </Grid>
</Page>